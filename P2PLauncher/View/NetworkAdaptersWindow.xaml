<Window x:Class="P2PLauncher.View.NetworkAdaptersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2PLauncher.View"
        mc:Ignorable="d"
        Title="NetworkAdaptersWindow" Height="450" Width="800">
    <Grid>
        <ListBox HorizontalAlignment="Left" ItemsSource="{Binding NetworkAdapterListItems}" SelectedItem="{Binding SelectedNetworkAdapterListItem}" Height="314" Margin="10,95,0,0" VerticalAlignment="Top" Width="772"
                 >
            <ListBox.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding FlipStatusOfCurrentCommand}"/>
            </ListBox.InputBindings>
        </ListBox>
        <Label Content="Decide which network adapters should be turn off when you will be hosting/joining using P2PLauncher. (Disable VPN adapters)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
