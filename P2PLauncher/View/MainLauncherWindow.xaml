<Window x:Class="P2PLauncher.View.MainLauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2PLauncher.View"
        mc:Ignorable="d"
        Title="MainLauncherWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Information" HorizontalAlignment="Left" Height="399" Margin="525,10,0,0" VerticalAlignment="Top" Width="257">
            <Grid HorizontalAlignment="Left" Height="319" Margin="0,0,0,0" VerticalAlignment="Top" Width="247">
                <Label Content="FreeLAN status: " HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
                <Label Content="{Binding freeLanStatus.InstallationStatusStr}" HorizontalAlignment="Left" Margin="0,36,0,0" VerticalAlignment="Top" Width="237"/>
                <Button Command="{Binding freeLanStatus.ShowDetectionWindowCommand}" Visibility="{Binding freeLanStatus.OpenDetectionWindowVisibility}" Content="Configure" HorizontalAlignment="Left" Margin="162,13,0,0" VerticalAlignment="Top" Width="75"/>
                <Button Command="{Binding windowsServices.ShowWindowsServicesWindowCommand}" Content="Services" HorizontalAlignment="Left" Margin="162,74,0,0" VerticalAlignment="Top" Width="75"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
